<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <!-- Vista formulario Orden de Trabajo -->
  <record id="view_orden_trabajo_form" model="ir.ui.view">
    <field name="name">orden.trabajo.form</field>
    <field name="model">orden.trabajo</field>
    <field name="arch" type="xml">
      <form string="Orden de Trabajo">
        <sheet>
          <group>
            <field name="name" readonly="1"/>
            <field name="vin"/>
            <field name="cliente_id"/>
            <field name="fecha"/>
            <field name="vehiculo_id"/>
            <field name="descripcion"/>
            <field name="estado"/>
          </group>
          <notebook>
            <page string="Items de Trabajo">
              <field name="items_ids">
                <tree editable="bottom">
                  <field name="servicio_id"/>
                  <field name="cantidad"/>
                  <field name="precio_unitario"/>
                </tree>
              </field>
            </page>
          </notebook>
        </sheet>
      </form>
    </field>
  </record>

  <!-- Vista lista Orden de Trabajo -->
  <record id="view_orden_trabajo_tree" model="ir.ui.view">
    <field name="name">orden.trabajo.tree</field>
    <field name="model">orden.trabajo</field>
    <field name="arch" type="xml">
      <tree string="Órdenes de Trabajo">
        <field name="name"/>
        <field name="cliente_id"/>
        <field name="vehiculo_id"/>
        <field name="estado"/>
        <field name="fecha"/>
      </tree>
    </field>
  </record>

  <!-- Acción y menú -->
  <record id="action_orden_trabajo" model="ir.actions.act_window">
    <field name="name">Órdenes de Trabajo</field>
    <field name="res_model">orden.trabajo</field>
    <field name="view_mode">tree,form</field>
  </record>

  <menuitem id="menu_taller_root" name="Taller Mecánico" sequence="10"/>
  <menuitem id="menu_taller_ordenes" name="Órdenes de Trabajo" parent="menu_taller_root" action="action_orden_trabajo"/>

</odoo>

